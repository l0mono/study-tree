<head>
  <link rel="stylesheet" href="style.css">
</head>
<p id="notice"><%= notice %></p>

<h1>Studies</h1>

<table>
  <thead>
    <tr class="column_name">
      <th>Picture</th>
      <th>Book</th>
      <th>Time</th>
      <th>Page</th>
      <th>Note</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.picture %></td>
        <td><%= study.book %></td>
        <td><%= study.time %></td>
        <td><%= study.page %></td>
        <td><%= study.note %></td>
        <td><%= study.published_at %></td>
        <td><%= link_to 'Show', study %></td>
        <td><%= link_to 'Edit', edit_study_path(study) %></td>
        <td><%= link_to 'Destroy', study, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Study', new_study_path %>
