<head>
  <link rel="stylesheet" href="style.css">
  <style>
    body {
      background-color: rgb(231, 228, 225);
    }
    .study-post {
      display: flex;
      margin-bottom: 10px;
    }
    .tl {
      display: flex;
      flex-direction: column;
    }
  </style>
</head>

<body>
  <header>
    <h1>
      <a href="/">Study Tree</a>
    </h1>
    <nav class="pc-nav">
      <ul>
        <li><%= link_to '記録する', new_study_path %></li>
        <li><a href="#">SERVICE</a></li>
        <li><a href="#">COMPANY</a></li>
        <li><a href="#">CONTACT</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <div class="tl">
      <% @studies.each do |study| %>
        <div class="study-post">
          <div class="image-container">
            <%= image_tag(study.picture_url, width: '100px') if study.picture.present? %>
          </div>
          <div class="text-container">
            <div><%= study.book %></div>
            <div><%= study.time.to_s + '時間' %></div>
            <div><%= study.page.to_s + 'ページ' %></div>
            <div><%= study.note %></div>
            <div><%= study.published_at %></div>
            <div><%= link_to 'show', study %></div>
          </div>
        </div>
      <% end %>
    </div>
    <br>
  </main>
</body>
